                <h1 class="logo">Travel Blog</h1>
                <ul class="nav-links">
                    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li><a href="@Url.Action("Index", "Blog")">Blog</a></li>
                    <li><a href="@Url.Action("Index", "Data")">Data</a></li>
